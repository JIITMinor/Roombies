<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roombies.SignUp"
    android:weightSum="1"
    android:background="#01122d">


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:id="@+id/FillRoomDetails"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:layout_weight="0.28"
        android:src="@drawable/mate"
        android:tint="#ffe88e"
        android:scaleType="fitCenter"
        android:layout_marginTop="116dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:id="@+id/FillRoomMateDetails"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.37"
        android:src="@drawable/house2"
        android:tint="#ffe88e"

        android:scaleType="fitCenter"
        android:background="@android:color/transparent"

        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Roommate"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/FillRoomDetails"
        android:layout_alignLeft="@+id/FillRoomDetails"
        android:layout_alignStart="@+id/FillRoomDetails"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/FillRoomDetails"
        android:layout_alignEnd="@+id/FillRoomDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Find Room"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"

        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/FillRoomMateDetails"
        android:layout_alignStart="@+id/FillRoomMateDetails" />


</RelativeLayout>
